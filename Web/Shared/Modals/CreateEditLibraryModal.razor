<EditForm Model="Model" OnValidSubmit="Save">
    <DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
            <MudTextField @bind-Value="@Model.Name"
                          For="()=>Model.Name"
                          Style="min-width:300px;"
                          Label="Name of Library"
                          Class="mb-4"
                          Variant="Variant.Outlined"
                                FullWidth />
            <MudTextField @bind-Value="@Model.Code"
                          For="()=>Model.Code"
                          Class="mb-4"
                          Style="min-width:300px;"
                          Label="Code"
                          Variant="Variant.Outlined"
                                FullWidth />
            @if (Cabinet is not null)
            {
                <MudTextField Value="@Cabinet.Name"
                              Class="mb-4"
                                    ReadOnly
                              Style="min-width:300px;"
                              Label="File Cabinet"
                              Variant="Variant.Outlined"
                                    FullWidth />
            }
            else
            {
                <MudSelect @bind-Value="@Model.CabinetId"
                           For="()=>Model.CabinetId"
                           Class="mb-4"
                           Style="min-width:300px;"
                           Label="File Cabinet"
                           Variant="Variant.Outlined"
                              FullWidth>
                <MudSelectItem Value="Guid.Empty">No filestore selected</MudSelectItem>
                @foreach (var cabinet in cabinets)
                    {
                        <MudSelectItem Value="@cabinet.Id">@cabinet.Name</MudSelectItem>
                    }
                </MudSelect>
            }
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="()=>Dialog.Cancel()">Cancel</MudButton>
            <MudButton ButtonType="ButtonType.Submit" Color="Color.Success">Save</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
@code {
    [CascadingParameter]
    MudDialogInstance Dialog { get; set; }
    [Parameter]
    public Library Model { get; set; }
    [Parameter]
    public bool IsEditing { get; set; }

    [Parameter]
    public Cabinet? Cabinet { get; set; }
    IEnumerable<Cabinet> cabinets = Enumerable.Empty<Cabinet>();
    protected override void OnInitialized()
    {
        if (Cabinet is null)
        {
            cabinets = cabinetService.GetAll().ToList();
        }
        else { }
        if (!IsEditing)
        {
            Model = new Library();
        }
    }
    void Save()
    {
        if (Cabinet is not null)
        {
            Model.CabinetId = Cabinet.Id;
        }
        else { }
        if (Model.CabinetId == Guid.Empty)
        {
            return;
        }
        Model.Code.Replace(" ", "").Trim();
        if (libraryService.Save(Model))
        {
            snackBar.Add("Changes saved successfully.", Severity.Success);
            Dialog.Close();
        }
        else
        {
            snackBar.Add("Failed to create Library.", Severity.Error);
        }
    }
}
